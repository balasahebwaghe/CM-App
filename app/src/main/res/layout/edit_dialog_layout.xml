<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:padding="16dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit HOD Details"
        android:textColor="@color/Orange"
        android:textAlignment="center"
        android:padding="10dp"
        android:textSize="20dp"

        />

    <TextView
        android:id="@+id/text_hod_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOD Name:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_hod_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter HOD Name" />

    <TextView
        android:id="@+id/text_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Course" />

    <TextView
        android:id="@+id/text_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Year" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    </LinearLayout>
</LinearLayout>
